@model IEnumerable<iTunesPlaylistViewer.Models.Track>

@{
    ViewBag.Title = "Playlist Uploaded";
}

<h2>@ViewBag.Title</h2>
<div class="row-fluid">
    <div class="span12">
        <table class="table-bordered table-striped table-hover" style="width: 100%;">
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Artist)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Album)
                </th>
            </tr>
            @foreach (var item in Model.Select((value, i) => new { i, value }))
            {
                <tr>
                    <td>
                        @((item.i + 1).ToString())
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.value.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.value.Artist)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.value.Album)
                    </td>
                </tr>
            }
        </table>
    </div>
    <p>&nbsp;</p>
    <p>
        <input type="button" value="View another list?" onclick="window.location.href='@(Url.Action("Index"))'" />
    </p>
    <p>&nbsp;</p>
</div>